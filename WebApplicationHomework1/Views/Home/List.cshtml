
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<form asp-controller="Home" asp-action="AddToList">
    <input type="text" name="textfield" placeholder="text"/>
    <input type="submit" value="submit"/>
</form>

<ul style="border:solid 0.2px">
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>@Model[i] <form asp-controller="Home" asp-action="DeletFromList"><input type="hidden" name="id" value="@i" /><input type="submit" value="delete" /></form> </li>
    }
</ul>