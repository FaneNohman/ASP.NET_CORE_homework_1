
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>
<ul style="border:solid 0.2px">
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>@Model[i] <form asp-controller="Home" asp-action="RemoveFromCart"><input type="hidden" name="id" value="@i" /><input type="submit" value="Remove" /></form> </li>
    }
</ul>
<form asp-controller="Home" asp-action="RemoveAllFromCart">
    <input type="submit" value="Remove all" />
</form>